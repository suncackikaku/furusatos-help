---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/Footer.astro';

import CustomForm from './CustomForm.astro';
import FloatBnr from './FloatBnr.astro';
import PRContent from './PRContent.astro';
import type { Code } from 'astro:components';

const slug = Astro.props.slug;
const isHomepage = slug === '';
---
<Default {...Astro.props}>
  <slot />
</Default>

{
  !isHomepage && (slug.includes("promotion-tools") ? (
    <FloatBnr>
      <PRContent {...Astro.props}/>
    </FloatBnr>
  ) : (
    <CustomForm {...Astro.props} />
  ))
}